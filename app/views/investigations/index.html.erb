<%if @open_investigations.empty?%>
    <h4>No open cases at this time</h4>

<%else%>
    <h4>Open Investigations in GCPD</h4>
    <table class="striped highlight">
    <thead>
        <th>Title</th>
        <th>Date open</th>
    </thead>

    <%for i in @open_investigations%>
        <tr>
            <td><%= i.title %></td>
            <td><%= i.date_opened.strftime("%m/%d/%y")%></td>
        </tr>
        
    <% end %>
    </table>
    <br>
<% end%>